<Window x:Class="Lab3.DisplayFlights"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3"
        mc:Ignorable="d"
        Title="DisplayFlights" Height="450" Width="400
        ">
    <Grid Background="#FF2E4DA0">
        <Label x:Name="displayLB" HorizontalAlignment="Center" Height="328" Margin="0,55,0,0" VerticalAlignment="Top" Width="321">
            <TextBox x:Name="displayText" Height="323" TextWrapping="Wrap" Width="314"/>
        </Label>
        <Button x:Name="displayB" Content="Display" HorizontalAlignment="Left" Height="45" Margin="80,10,0,0" VerticalAlignment="Top" Width="234" Click="displayB_Click" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>

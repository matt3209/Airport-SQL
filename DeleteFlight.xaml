<Window x:Class="Lab3.DeleteFlight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3"
        mc:Ignorable="d"
        Title="DeleteFlight" Height="450" Width="400
        ">
    <Grid Background="#FF2E4DA0">
        <Label x:Name="idLB" Content="Identifier" HorizontalAlignment="Left" Height="42" Margin="44,90,0,0" VerticalAlignment="Top" Width="118" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="idTB" HorizontalAlignment="Left" Height="42" Margin="232,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" TextChanged="idTB_TextChanged"/>
        <Button x:Name="deleteB" Content="Delete" HorizontalAlignment="Center" Height="68" Margin="0,217,0,0" VerticalAlignment="Top" Width="164" Click="deleteB_Click"/>

    </Grid>
</Window>
